{
  "compilerOptions": {
    "outDir": "./lib",
    "module": "esnext",
    "target": "esnext",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "esModuleInterop": true,
    "declaration": true
  },
  "include": [
    "src/**/*",
  ],
  "exclude": ["node_modules", "lib"],
}
